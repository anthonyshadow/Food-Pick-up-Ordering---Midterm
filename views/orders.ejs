<!DOCTYPE html>
<html lang="en">
  <head>
    <title>ORDERS</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/orders.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="/routes/order.js"></script>

  </head>
  <% include partials/_nav %>

  <body class="order-background">
      <section class="orders-container">
        <h2 class="title">YOUR ORDERS</h2>
        <% if(order) { %>
          <% for (let statusOrder of order) {%>
            <h3 class="order-number">ORDER NUMBER <%=statusOrder.orderid%></h3>
            <div>
              <strong>IS YOUR ORDER IN PROGRESS?</strong> <%=statusOrder.accepted%>
            </div>
            <div>
              <strong>IS YOUR ORDER COMPLETED?</strong>  <%=statusOrder.completed%>
            </div>
            <div>
              <strong>YOUR ORDER COST</strong> <%=statusOrder.total_price%>
            </div>
            <div>
              <strong>THE FOOD YOU ORDERED:</strong> <%=statusOrder.name%>
              </div>
          <% } %>
        <% } %>
      </section>



    <footer class=footer-orders>
      <h4 class="info-title">CONTACT US</h4>
      <div class="info">
        <p>PHONE</p>
        <p>ADDRESS</p>
        <p>HOURS</p>
        <p>EMAIL</p>
      </div>
    </footer>


  </body>
</html>
